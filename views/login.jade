extends layout

block content
    .container
        p #{message}
        form.form-signin(method='post')#login-form.well.span4
            h2.form-signin-heading Se connecter
            label Login
            br
            input(type="text", name="login", id='user-tf').span4.required
            br
            label Mot de passe
            br
            input(type="password", name="password", id='pass-tf').span4.required
            br
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Se connecter